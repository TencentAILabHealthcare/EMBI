{
    "name": "Epitope-BA-Training",
    "n_gpu": 1,

    "arch": {
        "type": "EpitopeMHCBert",
        "args": {
            "EpitopeBert_dir": "EpitopeBert",
            "MHCBert_dir":"MHCBert",
            "emb_dim": 768,
            "dropout":0.5
        }
    },

    "data_loader": {
        "type": "EpitopeMHCBertDataLoader",
        "args":{
            "data_dir": "./data/raw_data/",
            "batch_size": 1024,
            "seed": 0,
            "validation_split": 0.1,
            "test_split": 0.0,
            "epitope_vocab_dir": "",
            "MHC_vocab_dir":"",
            "shuffle":true,
            "num_workers":1,
            "epitope_tokenizer_dir":"EpitopeBert",
            "MHC_tokenizer_dir":"MHCBert",
            "epitope_max_seq_length": 20,
            "MHC_max_seq_length":34
        }
    },

    "freeze_embedding": true,
    "freeze_top":0,

    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.1
        }
    },
    "loss": "BCELoss",
    "metrics": [
        "accuracy_sample"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "../Result/",
        "save_period": 200,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
